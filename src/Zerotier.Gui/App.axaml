<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Zerotier.Gui.App">
  <Application.Styles>
    <FluentTheme Mode="Light" />
  </Application.Styles>

  <Application.Resources>
    <TrayIcon x:Key="MainTrayIcon"
              IsVisible="True"
              ToolTipText="Zerotier GUI">
      <TrayIcon.Menu>
        <NativeMenu>
          <NativeMenuItem Header="Open" Click="OnTrayShowClicked" />
          <NativeMenuItem Header="Quit" Click="OnTrayExitClicked" />
        </NativeMenu>
      </TrayIcon.Menu>
    </TrayIcon>
  </Application.Resources>
</Application>
